{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["app/components/*"],
      "@contexts/*": ["app/contexts/*"],
      "@utils/*": ["app/utils/*"],
      "@types/*": ["app/types/*"],
      "@hooks/*": ["app/hooks/*"],
      "@lib/*": ["app/lib/*"],
      "@game/*": ["app/game/*"],
      "@reducers/*": ["app/reducers/*"],
      "@store/*": ["app/store/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

