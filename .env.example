# Пример файла переменных окружения
# Скопируйте этот файл в .env.local для локальной разработки,
# или в .env.production для продакшн среды

# База данных
# URL подключения к PostgreSQL
DATABASE_URL="postgresql://admin:password@80.242.56.250:5432/GameProgress"

# Домен
NEXT_PUBLIC_DOMAIN=http://localhost:3000 # URL вашего домена для авторизации

# Авторизация
JWT_SECRET=your_jwt_secret                       # Секрет для подписи JWT токенов
REFRESH_SECRET="Jn7KoPvQxZm3eRuIbtW1ApY9cX5DgE8Lf2TsSdGhN0jO6aCwUyMzB4FqVlH/bPsArxnvEu5TGb1Cdt0LXzrDWQ==" # Секретный ключ для refresh token

# Farcaster API
NEYNAR_API_KEY=""                   # API ключ Neynar для валидации пользователей Farcaster
NEYNAR_CLIENT_ID=""                 # Client ID Neynar для API запросов

# Имитация режима продакшен в разработке
USE_PRODUCTION_MODE=false           # Включение продакшен-поведения в режиме разработки

# Настройки приложения
NODE_ENV=development                # Среда выполнения (development/production)
NEXT_PUBLIC_API_URL=                # URL для API (оставьте пустым для относительных путей)
NEXT_PUBLIC_SITE_URL=http://localhost:3000  # URL сайта
NEXT_PUBLIC_FARCASTER_FRAME_URL=    # URL для Farcaster Frame

# Порт для запуска приложения
PORT=3000

# Настройки JWT
JWT_EXPIRES_IN=30d                               # Время жизни JWT токена
REFRESH_TOKEN_EXPIRES_IN=60d                     # Время жизни refresh токена

# Настройки Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id           # ID клиента для Google OAuth
GOOGLE_CLIENT_SECRET=your_google_client_secret   # Секрет клиента для Google OAuth

# Настройки Farcaster
FARCASTER_SECRET=your_farcaster_secret           # Секрет для Farcaster API
FARCASTER_APP_ID=your_farcaster_app_id           # ID приложения Farcaster
FARCASTER_API_URL=https://api.farcaster.xyz      # URL API Farcaster

# Настройки приложения
APP_URL=http://localhost:3000                    # URL приложения
API_URL=http://localhost:3000/api                # URL API
ADMIN_API_KEY=admin_secret_key                   # Ключ для административного API

# Настройки отладки и логов
DEBUG=true                                       # Включить режим отладки (true/false)
LOG_LEVEL=info                                   # Уровень логирования (error/warn/info/debug)
ERROR_TRACE=true                                 # Включить трассировку ошибок в логах

# Настройки безопасности
ENCRYPTION_KEY=encryption_key_32_symbols_strong  # Ключ для шифрования данных
COOKIE_SECRET=cookie_secret_key                  # Секрет для шифрования cookies

# Настройки производительности
COMPRESSION_ENABLED=true                         # Включить сжатие данных (true/false)
CACHE_TTL=3600                                   # Время жизни кэша в секундах 